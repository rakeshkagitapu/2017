@model SPFS.Models.Summary

@{
    ViewBag.Title = "Summary";
}


<br />
<br />
<br />
<div class="panel panel-primary pnl">
    <div class="panel-heading">
        <h3 class="panel-title" style="font-weight:bold">  Summary  </h3>
    </div>
    <div class="panel-body">
        <h4> Thank You for submitting you ratings for location <strong>@Model.SiteName</strong></h4> 
        <p>These Ratings are <strong>@Html.Raw(ViewBag.Ratings)</strong>  for Ratings-period of  <strong>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month),@Model.Year</strong>
              
        </p>  
      
    </div>

    <!-- List group -->
    <div class="list-group panel-primary">
        @*<a href="#" class="list-group-item pnlbg">*@
            <h4 class="list-group-item pnlbg"><span>Detailed summary as provided below</span></h4>
        @*</a>*@
      
            <a href="#" class="list-group-item">
                <span class="badge badge-info">@Model.RowCount</span>Total Records
            </a>
            <a href="#" class="list-group-item">
                <span class="badge badge-info">@Model.SubmittedCount</span>Submitted Records
            </a>
            <a href="#" class="list-group-item">
                <span class="badge badge-info">@Model.StageCount</span>Saved Records
            </a>

</div>
</div>
